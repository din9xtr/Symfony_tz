{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Posted by you</h1>

		{% if posts != null %}

			<div class="row">
				{% for post in posts %}

					<div class="col-md-4 mb-2">
						<div class="card bg-dark text-white h-100 ">
							<div class="card-body d-flex flex-column">
								<a href="{{ path('post_show', { 'id': post.id }) }}" class="text-decoration-none text-white">
									<h5 class="card-title">{{ post.title }}</h5>
									<p class="card-text">{{ post.postText | slice(0, 50) ~ '...' }}</p>
									<div class="mt-auto">
										<p class="card-text">
											<small class=" text-white">Posted on
												{{ post.postDate | date('Y-m-d') }}</small>
											<br>
										</p>
									</div>
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p>You have not added any posts .</p>
		{% endif %}
	</div>
{% endblock %}

