<div class="row">
	{% for post in posts %}
		<div class="col-md-12 mb-4">
			<div class="card bg-dark text-white ">
				<div class="card-body">
					<a href="{{ path('post_show', { 'id': post.id }) }}" class="text-decoration-none text-white">
						<h5 class="card-title">{{ post.title }}</h5>
						<p class="card-text">{{ post.postText | slice(0, 100) ~ '...' }}</p>
						<p class="card-text">
							<small class=" text-white">Posted on
								{{ post.postDate | date('Y-m-d') }}</small>
							<br>
							<small class=" text-white">Views:
								{{ post.viewCount }}</small>
								<small class=" text-white">Commets: {{ post.comments|length }} </small>
						</p>
					</a>
				</div>
			</div>
		</div>
	{% endfor %}
</div>